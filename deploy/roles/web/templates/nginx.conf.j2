server {

  listen 80;
  gzip on;

  server_name {{app_domain}};
  access_log /var/log/nginx/{{app_domain}}.access.log;
  error_log  /var/log/nginx/{{app_domain}}.error.log;

  location /my/ {
    alias /var/www/{{app_domain}}/dashboard/;
    try_files $uri $uri/ /my/index.html;
  }
  location /3rd/ {
    alias /var/www/{{app_domain}}/node_modules/;    
  }
  location /assets/ {
    alias /var/www/{{app_domain}}/assets/;    
  }
  location /upload/ {
    alias /var/www/{{app_domain}}/tmp/upload/;    
  }

  location / {
    proxy_set_header X-Forwarded-Proto http;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;    
    proxy_set_header Host $http_host;
    proxy_redirect off;
    proxy_pass http://localhost:{{app_http_port}};
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection "upgrade";
  }
}