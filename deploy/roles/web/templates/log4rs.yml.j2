appenders:
  stdout:
    kind:        console
  filesystem:
    kind:        rolling_file
    path:        "tmp/logs/www.log"
    policy:
      kind:      compound
      trigger:
        kind:    size
        limit:   50mb
      roller:
        kind:    fixed_window
        base:    1
        count:   10
        pattern: "tmp/logs/www.{}.log"

root:
  level:         info
  appenders:
    - stdout
    - filesystem
